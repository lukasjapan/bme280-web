source 'https://rubygems.org'

# Webserver
gem 'puma'

# Web Framework
gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'
gem 'rake'

# Template Engine
gem 'slim'

# Database Access
gem 'sqlite3'

# BME280 Driver
gem 'i2c-bme280'

group :test do
  gem 'rspec'

  # http request/respond
  gem 'rack-test'

  # Time related tests
  gem 'timecop'

  # Database
  gem 'database_cleaner'

  # Code Coverage
  gem 'simplecov'
  gem 'coveralls'
end
